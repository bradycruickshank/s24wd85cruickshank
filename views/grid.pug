extends layout

block content
  h1= title
  p Rows:#{query.rows} Cols:#{query.cols}
  - rows = Number(query.rows)
  - cols = Number(query.cols)
  if !Number.isInteger(rows)
    p rows is not a number
  if !Number.isInteger(cols)
    p cols is not a number
  else if rows < 3 || rows > 13
    p rows out of range
  else if cols < 3 || cols > 13
    p cols out of range
  else
    table#outer
      - for(let i = 0; i < rows; i++) {
          tr#middle
          - for(let j = 0; j < cols; j++) {
            - if (i < j) {
              td= i + 1
            - }
            - else {
              td= j + 1
            - }
          - }
      - }
  
  
  
